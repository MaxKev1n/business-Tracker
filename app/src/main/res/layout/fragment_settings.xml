<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    tools:context=".ui.settings.SettingsFragment">

    <TextView
        android:id="@+id/text_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.977" />

    <View
        android:id="@+id/userInfo"
        android:layout_width="354dp"
        android:layout_height="106dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/shape_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/settingInfo"
        android:layout_width="354dp"
        android:layout_height="266dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userInfo" />

    <TextView
        android:id="@+id/listText2"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="网站：github.com/MaxKev1n/mobile_application"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/imageView10"
        app:layout_constraintTop_toBottomOf="@+id/listLine1" />

    <View
        android:id="@+id/listLine2"
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:background="#DEDEDE"
        app:layout_constraintEnd_toEndOf="@+id/settingInfo"
        app:layout_constraintStart_toStartOf="@+id/settingInfo"
        app:layout_constraintTop_toBottomOf="@+id/list2" />

    <View
        android:id="@+id/list1"
        android:layout_width="324dp"
        android:layout_height="38dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/settingInfo"
        app:layout_constraintStart_toStartOf="@+id/settingInfo"
        app:layout_constraintTop_toTopOf="@+id/settingInfo" />

    <View
        android:id="@+id/listLine1"
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:background="#DEDEDE"
        app:layout_constraintEnd_toEndOf="@+id/settingInfo"
        app:layout_constraintStart_toStartOf="@+id/settingInfo"
        app:layout_constraintTop_toBottomOf="@+id/list1" />

    <ImageView
        android:id="@+id/imageSynTime"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_time"
        app:layout_constraintStart_toStartOf="@+id/list1"
        app:layout_constraintTop_toTopOf="@+id/list1" />

    <TextView
        android:id="@+id/listText1"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="同步时间"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/imageSynTime"
        app:layout_constraintTop_toTopOf="@+id/list1" />

    <EditText
        android:id="@+id/editList1"
        android:layout_width="128dp"
        android:layout_height="25dp
"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="36dp"
        android:background="@null"
        android:ems="10"
        android:inputType="textPersonName"
        android:gravity="center_vertical|right"
        android:hint="秒"
        app:layout_constraintEnd_toEndOf="@+id/list1"
        app:layout_constraintTop_toTopOf="@+id/list1"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="确定"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingInfo" />

    <TextView
        android:id="@+id/textName"
        android:layout_width="230dp"
        android:layout_height="41dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintStart_toEndOf="@+id/userImg"
        app:layout_constraintTop_toTopOf="@+id/userInfo" />

    <Button
        android:id="@+id/buttonChangeImg"
        android:layout_width="66dp"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:text="更换"
        app:layout_constraintEnd_toEndOf="@+id/textName"
        app:layout_constraintTop_toBottomOf="@+id/textName" />

    <ImageView
        android:id="@+id/userImg"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:scaleType="center"
        android:src="@mipmap/ic_default_img_foreground"
        app:layout_constraintStart_toStartOf="@+id/userInfo"
        app:layout_constraintTop_toTopOf="@+id/userInfo" />

    <View
        android:id="@+id/list2"
        android:layout_width="324dp"
        android:layout_height="38dp"
        app:layout_constraintEnd_toEndOf="@+id/settingInfo"
        app:layout_constraintStart_toStartOf="@+id/settingInfo"
        app:layout_constraintTop_toBottomOf="@+id/listLine1" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_network"
        app:layout_constraintStart_toStartOf="@+id/list2"
        app:layout_constraintTop_toBottomOf="@+id/listLine1" />

    <Button
        android:id="@+id/buttonWebRun"
        android:layout_width="64dp"
        android:layout_height="41dp"
        android:layout_marginEnd="12dp"
        android:text="跳转"
        app:layout_constraintEnd_toEndOf="@+id/list2"
        app:layout_constraintTop_toBottomOf="@+id/listLine1" />

</androidx.constraintlayout.widget.ConstraintLayout>