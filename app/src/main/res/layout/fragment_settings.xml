<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    tools:context=".ui.settings.SettingsFragment">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f4f4f4">

            <View
                android:id="@+id/list4"
                android:layout_width="324dp"
                android:layout_height="38dp"
                app:layout_constraintEnd_toEndOf="@+id/settingInfo"
                app:layout_constraintStart_toStartOf="@+id/settingInfo"
                app:layout_constraintTop_toBottomOf="@+id/listLine3" />

            <TextView
                android:id="@+id/text_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <View
                android:id="@+id/userInfo"
                android:layout_width="354dp"
                android:layout_height="106dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.491"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/settingInfo"
                android:layout_width="354dp"
                android:layout_height="266dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/shape_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.491"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userInfo" />

            <View
                android:id="@+id/listLine4"
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:background="#DEDEDE"
                app:layout_constraintEnd_toEndOf="@+id/settingInfo"
                app:layout_constraintStart_toStartOf="@+id/settingInfo"
                app:layout_constraintTop_toBottomOf="@+id/list4" />

            <View
                android:id="@+id/listLine3"
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:background="#DEDEDE"
                app:layout_constraintEnd_toEndOf="@+id/settingInfo"
                app:layout_constraintStart_toStartOf="@+id/settingInfo"
                app:layout_constraintTop_toBottomOf="@+id/list3" />

            <TextView
                android:id="@+id/listText3"
                android:layout_width="110dp"
                android:layout_height="25dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:text="查看用户记录"
                android:textSize="18dp"
                app:layout_constraintStart_toEndOf="@+id/imageSearch"
                app:layout_constraintTop_toBottomOf="@+id/listLine2" />

            <View
                android:id="@+id/list3"
                android:layout_width="324dp"
                android:layout_height="72dp"
                app:layout_constraintEnd_toEndOf="@+id/settingInfo"
                app:layout_constraintStart_toStartOf="@+id/settingInfo"
                app:layout_constraintTop_toBottomOf="@+id/list2" />

            <TextView
                android:id="@+id/listText2"
                android:layout_width="75dp"
                android:layout_height="25dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:text="网站：github.com/MaxKev1n/mobile_application"
                android:textSize="18dp"
                app:layout_constraintStart_toEndOf="@+id/imageWeb"
                app:layout_constraintTop_toBottomOf="@+id/listLine1" />

            <View
                android:id="@+id/listLine2"
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:background="#DEDEDE"
                app:layout_constraintEnd_toEndOf="@+id/settingInfo"
                app:layout_constraintStart_toStartOf="@+id/settingInfo"
                app:layout_constraintTop_toBottomOf="@+id/list2" />

            <View
                android:id="@+id/list1"
                android:layout_width="324dp"
                android:layout_height="38dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="@+id/settingInfo"
                app:layout_constraintStart_toStartOf="@+id/settingInfo"
                app:layout_constraintTop_toTopOf="@+id/settingInfo" />

            <View
                android:id="@+id/listLine1"
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:background="#DEDEDE"
                app:layout_constraintEnd_toEndOf="@+id/settingInfo"
                app:layout_constraintStart_toStartOf="@+id/settingInfo"
                app:layout_constraintTop_toBottomOf="@+id/list1" />

            <ImageView
                android:id="@+id/imageSynTime"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_cloud_upload"
                app:layout_constraintStart_toStartOf="@+id/list1"
                app:layout_constraintTop_toTopOf="@+id/list1" />

            <TextView
                android:id="@+id/listText1"
                android:layout_width="75dp"
                android:layout_height="25dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:text="同步时间"
                android:textSize="18dp"
                app:layout_constraintStart_toEndOf="@+id/imageSynTime"
                app:layout_constraintTop_toTopOf="@+id/list1" />

            <EditText
                android:id="@+id/editList1"
                android:layout_width="136dp"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="12dp"
                android:background="@null"
                android:ems="10"
                android:gravity="center_vertical|right"
                android:hint="秒"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/list1"
                app:layout_constraintTop_toTopOf="@+id/list1"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textName"
                android:layout_width="230dp"
                android:layout_height="41dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:layout_constraintStart_toEndOf="@+id/userImg"
                app:layout_constraintTop_toTopOf="@+id/userInfo" />

            <Button
                android:id="@+id/buttonChangeImg"
                android:layout_width="66dp"
                android:layout_height="38dp"
                android:layout_marginTop="8dp"
                android:text="更换"
                app:layout_constraintEnd_toEndOf="@+id/textName"
                app:layout_constraintTop_toBottomOf="@+id/textName" />

            <ImageView
                android:id="@+id/userImg"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:scaleType="center"
                android:src="@mipmap/ic_default_img_foreground"
                app:layout_constraintStart_toStartOf="@+id/userInfo"
                app:layout_constraintTop_toTopOf="@+id/userInfo" />

            <View
                android:id="@+id/list2"
                android:layout_width="324dp"
                android:layout_height="38dp"
                app:layout_constraintEnd_toEndOf="@+id/settingInfo"
                app:layout_constraintStart_toStartOf="@+id/settingInfo"
                app:layout_constraintTop_toBottomOf="@+id/listLine1" />

            <ImageView
                android:id="@+id/imageWeb"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_network"
                app:layout_constraintStart_toStartOf="@+id/list2"
                app:layout_constraintTop_toBottomOf="@+id/listLine1" />

            <Button
                android:id="@+id/buttonWebRun"
                android:layout_width="64dp"
                android:layout_height="41dp"
                android:layout_marginEnd="12dp"
                android:text="跳转"
                app:layout_constraintEnd_toEndOf="@+id/list2"
                app:layout_constraintTop_toBottomOf="@+id/listLine1" />


            <ImageView
                android:id="@+id/imageSearch"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_search"
                app:layout_constraintStart_toStartOf="@+id/list3"
                app:layout_constraintTop_toTopOf="@+id/list3" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="135dp"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="12dp"
                android:background="@null"
                android:ems="10"
                android:gravity="center_vertical|right"
                android:hint="用户账号"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/list3"
                app:layout_constraintTop_toBottomOf="@+id/listLine2" />

            <Button
                android:id="@+id/buttonSearch"
                android:layout_width="64dp"
                android:layout_height="41dp"
                android:text="搜索"
                app:layout_constraintEnd_toEndOf="@+id/editText3"
                app:layout_constraintTop_toBottomOf="@+id/editText3" />

            <ImageView
                android:id="@+id/imageViewShow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_view_show"
                app:layout_constraintStart_toStartOf="@+id/list4"
                app:layout_constraintTop_toBottomOf="@+id/listLine3" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="110dp"
                android:layout_height="25dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:text="查看权限"
                android:textSize="18dp"
                app:layout_constraintStart_toEndOf="@+id/imageViewShow"
                app:layout_constraintTop_toBottomOf="@+id/listLine3" />

            <Switch
                android:id="@+id/switchView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintEnd_toEndOf="@+id/list4"
                app:layout_constraintTop_toBottomOf="@+id/listLine3" />

            <View
                android:id="@+id/viewList"
                android:layout_width="354dp"
                android:layout_height="170dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/shape_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.491"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settingInfo" />

            <View
                android:id="@+id/listLineNotice2"
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:background="#DEDEDE"
                app:layout_constraintEnd_toEndOf="@+id/viewList"
                app:layout_constraintStart_toStartOf="@+id/viewList"
                app:layout_constraintTop_toBottomOf="@+id/checkBox3" />

            <Button
                android:id="@+id/buttonLogOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="96dp"
                android:text="注销"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/buttonConfirm" />

            <Button
                android:id="@+id/buttonConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="确定"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.352"
                app:layout_constraintStart_toEndOf="@+id/buttonLogOut"
                app:layout_constraintTop_toBottomOf="@+id/viewList" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:text="@string/timer1_text"
                app:layout_constraintEnd_toEndOf="@+id/viewList"
                app:layout_constraintStart_toStartOf="@+id/viewList"
                app:layout_constraintTop_toTopOf="@+id/viewList" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="@string/timer2_text"
                app:layout_constraintEnd_toEndOf="@+id/viewList"
                app:layout_constraintStart_toStartOf="@+id/viewList"
                app:layout_constraintTop_toBottomOf="@+id/checkBox3" />

            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="@string/timer3_text"
                app:layout_constraintEnd_toEndOf="@+id/viewList"
                app:layout_constraintStart_toStartOf="@+id/viewList"
                app:layout_constraintTop_toBottomOf="@+id/checkBox" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="205dp" />

            <View
                android:id="@+id/listLineNotice1"
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:background="#DEDEDE"
                app:layout_constraintEnd_toEndOf="@+id/viewList"
                app:layout_constraintStart_toStartOf="@+id/viewList"
                app:layout_constraintTop_toBottomOf="@+id/checkBox" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>